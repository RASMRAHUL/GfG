Selection Sort...

APPROACH 1:.............(Iterative method)....


class Solution
{
    public:
    int select(int arr[], int i)
    {
        int len = sizeof(arr)/sizeof(arr[i]);
        selectionSort(arr, len);
        
    }
     
    void selectionSort(int arr[], int n)
    {
       for(int i = 0 ; i< n-1; i++)
       {
           int small = i;
           for(int j = i; j< n; j++)
           {
               if(arr[j] < arr[small])
                    small = j;
           }
           swap(&arr[i],&arr[small]);
       }
    }
};


